{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies",
    "no milestone"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "maven"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "matchBaseBranches": [
        "/^release/.*/"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": [
        "/^release/.*/"
      ],
      "matchPackageNames": [
        "io.camunda**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": ["io.camunda:zeebe-client-java"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": [
        "io.camunda.connector"
      ],
      "enabled": false
    }
  ],
  "baseBranches": [
    "main",
    "release/8.5",
    "release/8.6"
  ]
}
